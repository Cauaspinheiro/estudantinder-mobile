{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "target": "ES2017",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,

    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,

    "baseUrl": ".",
    "paths": {
      "main/*": ["./src/main/*"],
      "shared/*": ["./src/shared/*"],
      "views/*": ["./src/views/*"]
    }
  }
}
